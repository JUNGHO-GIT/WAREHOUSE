{
  "$schema": "https://json.schemastore.org/jsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "jquery": ["./src/main/webapp/resources/type/jquery"],
      "js": ["./src/main/webapp/resources/type/js"],
      "amchart": ["./src/main/webapp/resources/type/amchart"]
    },
    "typeRoots": [
      "./src/main/webapp/resources/type"
    ],
    "types": [
      "jquery",
      "js",
      "amchart"
    ]
  },
  "include": [
    "src/**/*",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": [
    "target/**/*",
    "**/node_modules",
    "**/backup"
  ]
}