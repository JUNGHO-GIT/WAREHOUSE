{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "jquery": ["./src/main/webapp/resources/types/jquery"],
      "js": ["./src/main/webapp/resources/types/js"]
    },
    "typeRoots": [
      "./src/main/webapp/resources/types"
    ],
    "types": [
      "jquery",
      "js"
    ]
  },
  "include": [
    "src/**/*",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": [
    "target/**/*"
  ]
}