<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd"
>

<mapper namespace="com.WAREHOUSE.dao.FilesDAO">

  <!-- Files.listFiles -->
  <select
  	id="listFiles"
  	parameterType="hashmap"
  	resultType="Files"
  >
    <![CDATA[
    SELECT
      fileSeq, tableNm, tableKey, fileUrl, fileNm, flagYn
    FROM
      tblFiles
    WHERE
      flagYn = 'Y' AND tableNm = #{tableNm} AND tableKey = #{tableKey}
    ]]>
  </select>

  <!-- Files.showFiles -->
  <select
  	id="showFiles"
  	parameterType="hashmap"
  	resultType="hashmap"
  >
    <![CDATA[
    SELECT
      fileSeq, tableNm, tableKey, fileUrl, fileNm, flagYn
    FROM
      tblFiles
    WHERE
      flagYn = 'Y' AND tableNm = #{tableNm} AND tableKey = #{tableKey}
    ]]>
  </select>

  <update
    id="updateIssueDt"
    parameterType="hashmap"
  >
    <![CDATA[
    UPDATE
      ${tableNm}
    SET
      issueDt = NOW()
    WHERE
    	${keyColumn} = #{tableKey}
   	]]>
  </update>

  <!-- Files.saveFiles -->
  <select
  	id="saveFiles"
  	parameterType="Files"
  	resultType="hashmap"
  >
    CALL sp_Files (
      #{fileSeq},
      #{tableNm},
      #{tableKey},
      #{fileUrl},
      #{fileNm},
      #{flagYn},
      #{issueId}
    );
  </select>

</mapper>
